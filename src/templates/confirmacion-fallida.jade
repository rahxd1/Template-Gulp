extends ./base.jade

block content
	section.section-hero.section-confirmation
		.semi-filled
			.fullsize-filter
			header
				.container
					h1 Confirma tu asistencia
			.fullsize-image.semi-filled
				div(style="background-image: url(imgs/hero_confirmacion.jpg)")
			.row
				.date
					h4 Noviembre 18	
	section.section-briefings.section-session
		.container
			.row
				article.session
					p.title-session Sesión informativa en línea
					p.date-session Martes 18 de Noviembre
						br
						span 8:00 pm
	section.full-width-ligh-gray
		.container
			.row.message.error
				img(src='imgs/icons/error_form_icono.png', alt= 'Error' height=70)
				h3 Parece que hubo un error en el envio.
				p Inténtalo nuevamente, si el problema persiste inténtalo más tarde.
				a.button.button-blue(href="javascript:void(0)") Reintentar	